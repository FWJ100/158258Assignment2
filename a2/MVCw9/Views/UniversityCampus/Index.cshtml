@model IEnumerable<UniversityCampus>

@{
    ViewBag.Title = "Character";
}

<style>
    .table {
        width: 80%;
        margin: 20px auto; 
        border: 2px solid #990000;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;

        }

        .table th {
            background-color: #660066;
            color: #fff;
        }

        .table tr:hover {
            background-color: #FFCCCC;
        }

    .button {
        display: inline-block;
        padding: 6px 12px;
        background-color: #660066;
        color: #fff;
        text-decoration: none;
        border: 3px solid #FFFFFF;
        border-radius: 4px;
        margin-right: 10px;
    }

        .button:hover {
            color: #FFFF00;
            background-color: #660999;
        }
</style>


<h2>Leave your favorite character!</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "button" }) 
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "button" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "button" })
            </td>
        </tr>
    }

</table>

